<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="32dp">

    <ImageView
        android:id="@+id/emptyStateIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/no_workouts_found"
        android:tint="@color/gray_400"
        tools:src="@drawable/ic_fitness" />

    <TextView
        android:id="@+id/emptyStateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.FitGen.Body"
        android:textColor="@color/gray_600"
        tools:text="No workouts found" />

    <TextView
        android:id="@+id/emptyStateMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.FitGen.Caption"
        android:textColor="@color/gray_500"
        tools:text="Try adjusting your filters or check back later" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/emptyStateButton"
        style="@style/Widget.FitGen.Button.Outlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        tools:text="Retry"
        tools:visibility="visible" />

</LinearLayout>
