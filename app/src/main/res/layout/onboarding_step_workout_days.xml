<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/workout_days_per_week"
            android:textAppearance="@style/TextAppearance.FitGen.Headline2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/workout_days_description"
            android:textAppearance="@style/TextAppearance.FitGen.Caption"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleTextView" />

        <RadioGroup
            android:id="@+id/workoutDaysRadioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descriptionTextView">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/twoDaysRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/two_days_per_week" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/threeDaysRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:checked="true"
                android:text="@string/three_days_per_week" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/fourDaysRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/four_days_per_week" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/fiveDaysRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/five_days_per_week" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/sixDaysRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/six_days_per_week" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/sevenDaysRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/seven_days_per_week" />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
